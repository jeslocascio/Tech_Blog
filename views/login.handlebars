<div class="container mt-5">
  <div class="row">
    <!-- Login Form Column -->
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header">
          <!-- Display "Login" as the card header -->
          Login
        </div>
        <div class="card-body">
          <!-- Create a login form with username and password input fields -->
          <form class="login-form">
            <div class="form-group">
              <label for="username-login">Username</label>
              <!-- Input field for username -->
              <input
                type="text"
                class="form-control"
                id="username-login"
                aria-describedby="emailHelp"
                placeholder="Enter username"
              />
            </div>
            <div class="form-group">
              <label for="password-login">Password</label>
              <!-- Input field for password -->
              <input
                type="password"
                class="form-control"
                id="password-login"
                placeholder="Password"
              />
            </div>
            <!-- Login button -->
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Register Form Column -->
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header">
          <!-- Display "Register" as the card header -->
          Register
        </div>
        <div class="card-body">
          <!-- Create a registration form with username and password input fields -->
          <form class="signup-form">
            <div class="form-group">
              <label for="username-signup">Username</label>
              <!-- Input field for username -->
              <input
                type="text"
                class="form-control"
                id="username-signup"
                placeholder="Enter username"
              />
            </div>
            <div class="form-group">
              <label for="password-signup">Password</label>
              <!-- Input field for password -->
              <input
                type="password"
                class="form-control"
                id="password-signup"
                placeholder="Password"
              />
            </div>
            <!-- Registration button -->
            <button type="submit" class="btn btn-primary">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Include JavaScript files for login and registration functionality -->
<script src="/js/login.js"></script>
<script src="/js/signup.js"></script>
