{{!< layouts/main}}

<h1>{{post.title}}</h1>
<p>{{post.content}}</p>
<p>Posted by {{post.user.username}} on {{format_date post.data_created}}</p>

<h2>Comments</h2>

{{#each comments}}
  <div class="card mb-2">
    <div class="card-body">
      <p class="card-text">{{comment}}</p>
      <p class="card-text">Commented by {{user.username}} on {{format_date creation_date}}</p>
    </div>
  </div>
{{/each}}

{{#if user_id}}
  <h3>Add a Comment</h3>
  <form action="/comment/{{post.id}}" method="POST">
    <div class="mb-3">
      <textarea name="comment" class="form-control" rows="4" placeholder="Leave a comment"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Comment</button>
  </form>
{{else}}
  <p>Please <a href="/login">login</a> to leave a comment.</p>
{{/if}}